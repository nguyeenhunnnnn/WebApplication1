@model IEnumerable<WebApplication1.Models.ViewModels.UngTuyenViewModel>

@using WebApplication1.Models

@{
    ViewData["Title"] = "Bai Dang ";
    ViewData["UserRole"] = User.FindFirst("VaiTro")?.Value; // nếu bạn lưu vai trò bằng claim "VaiTro"
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styleDangTin.css" />
    <link rel="stylesheet" href="~/css/StyleSidebar.css" />
    <link rel="stylesheet" href="~/css/styleQlbd.css" />
    <link href="~/css/tb.css" rel="stylesheet" />
    <title>HUNO - Danh sach ung tuyen</title>

    <style>
        .avatar {
            vertical-align: middle;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>
<div class="container">
    <!-- Sidebar -->
    @await Html.PartialAsync("_SidebarPartial", new
        {
            Controller = ViewContext.RouteData.Values["controller"]?.ToString(),
            Action = ViewContext.RouteData.Values["action"]?.ToString(),
            VaiTro = User.FindFirst("VaiTro")?.Value
        })
    <div class="notification-container">
        @await Html.PartialAsync("_Notification")
    </div>
    <!-- Main Content -->
    <div class="main-content">

        <!-- Content Area -->
        <div class="content" style="width:140%">

            <div class="search-container">
                <div class="section-title">
                    <form action="QLUT" method="get">
                        <a href="?trangthai=Chờ duyệt"> Chờ duyệt</a>
                        <a href="?trangthai=Chấp nhận">Chấp nhận</a>
                        <a href="?trangthai=Từ chối">Từ chối</a>
                    </form>
                </div>
                <form method="post" asp-action="TimKiem">
                    <div class="search-row">
                        <div class="search-field">
                            <label class="search-label">Từ khóa</label>
                            <input name="TuKhoa" type="text" class="search-input" placeholder="Nhập từ khóa">
                        </div>
                        <div class="search-field">
                            <label class="search-label">Thời gian đăng</label>
                            <div class="date-picker">
                                <input name="ThoiGian" type="date" class="search-select" placeholder="Chọn">
                                <span class="date-icon">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="3" y="6" width="18" height="15" rx="2" stroke="currentColor" stroke-width="2" />
                                        <path d="M3 10H21" stroke="currentColor" stroke-width="2" />
                                        <path d="M8 3V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M16 3V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                        <button class="search-btn" type="submit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M21 21L16.65 16.65M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            Tìm
                        </button>
                    </div>
                </form>
            </div>

            <!-- Results section -->
            <div class="results-container">
                <table>
                    <thead>
                        <tr>
                            <th>Ứng viên</th>
                            <th>Phụ huynh</th>
                            <th>Bài đăng</th>
                            <th>Ngày ứng tuyển</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <img src="@item.AvatarUrl" alt="Avatar" class="avatar">
                                    @item.TenGiaSu
                                </td>
                                <td>
                                    <img src="@item.PhuHuynhAvatarUrl" alt="Avatar" class="avatar">
                                    @item.phuhuynhName
                                </td>
                                <td>@item.TieuDeBaiDang</td>
                                <td>@item.NgayUngTuyen.ToString("dd/MM/yyyy")</td>
                                <td>@item.TrangThai</td>
                                <td class="action-cell">
                                   
                                    @if (item.TrangThai != "Chấp nhận")
                                    {
                                        <form asp-action="Duyet" asp-controller="baiDang" method="get">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="baiDangId" value="@item.MaBaiDang" />
                                            <button class="action-btn" type="submit" name="trangthai" value="Chấp nhận">
