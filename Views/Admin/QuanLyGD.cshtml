@model List< WebApplication1.Models.ViewModels.LichSuTTViewModel>
@using WebApplication1.Models

@{
    ViewData["Title"] = "Quan ly Giao dich";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/StyleSidebar.css" />
    <link rel="stylesheet" href="~/css/StyleDH.css" />
    <title>HUNO - Quản lý giao dịch</title>

</head>
<body>
    <div class="container">
        <!-- Sidebar
            <div class="sidebar">

                <div class="menu">
                    <div class="menu-item ">
                        <i class="fas fa-file-alt"></i>
                        <span>Tìm hồ sơ</span>
                    </div>
                    <div class="menu-item active">
                        <i class="fas fa-file-alt"></i>
                        <span>Đăng Tin</span>
                    </div>
                    <div class="menu-item">
                        <i class="fas fa-tasks"></i>
                        <span>Quản Lí Tin Đăng</span>
                    </div>
                    <div class="menu-item">
                        <i class="fas fa-users"></i>
                        <span>Quản Lí Ứng Viên</span>
                    </div>
                    <div class="menu-item">
                        <i class="fas fa-chart-bar"></i>
                        <span>Dashboard</span>
                    </div>
                    <div class="menu-item">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Đơn Hàng</span>
                    </div>
                    <div class="menu-item">
                        <i class="fas fa-envelope"></i>
                        <span>Cấu Hình Email</span>
                    </div>
                </div>

                <div class="footer-sidebar">
                    <div>Version V2.74.39</div>
                    <div>© 2024 BOWO. All Rights Reserved.</div>
                </div>
            </div>
        -->
        <!-- Main Content -->
        <div class="main-content">
            <div class="content" style="width:140%">

                <div class="search-container">

                    <div class="section-title">
                        <form asp-controller="ThanhToan" asp-action="QuanLyGD" method="get">
                            <a href="@Url.Action("QuanLyGD", new { trangthaiGD = "Chờ duyệt" })">Giao dịch chờ duyệt</a>
                            <a href="@Url.Action("QuanLyGD", new { trangthaiGD = "Đã duyệt" })">Giao dịch đã duyệt</a>
                        </form>
                    </div>

                </div>

                @if (Model.Any())
                {
                    <div class="results-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Người dùng</th>
                                    <th>Tiêu đề bài đăng</th>
                                    <th>Ngày đăng</th>
                                    <th>Tên gói</th>
                                    <th>Số tiền</th>
                                    <th>Ngày thanh toán</th>
                                    <th>Ưu tiên đến</th>
                                    @if (Model.Any(item => item.TrangThaiGD == "Chờ duyệt"))
                                    {
                                        <th>Thao tác</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TenNguoiDung</td>
                                        <td>@item.TieuDeBaiDang</td>
                                        <td>@item.NgayDang.ToString("dd/MM/yyyy")</td>
                                        <td>@item.TenGoi</td>
                                        <td>@item.SoTien</td>
                                        <td>@item.NgayThanhToan.ToString("dd/MM/yyyy")</td>
                                        <td>@item.DayUuTienDen?.ToString("dd/MM/yyyy")</td>
                                        @if (item.TrangThaiGD == "Chờ duyệt")
                                        {
                                            <td>
                                                <form asp-action="Duyet" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit">Duyệt</button>
                                                </form>
                                            </td>
                                        }
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p>Chưa có giao dịch nào.</p>
                }
            </div>
        </div>
</body>
</html>
<script>
    // Tab switching functionality
    const tabs = document.querySelectorAll('.tab');
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
      });
    });
</script>

