    <script>
        function checkLogin() {
            // Check if user is authenticated using Razor syntax
            var isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();

            if (!isAuthenticated) {
                // If not authenticated, alert and redirect to login page
                alert("Vui lòng đăng nhập");
                window.location.href = '/Account/Login';  // Redirect to login page
            } else {
                // If authenticated, navigate to "Quản Lý" page
                window.location.href = '@Url.Action("DangTin", "baiDang")';  // Redirect to "Quản Lý"
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
