    <!-- Header -->
    <header>
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <div class="logo-icon">
                    <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="5" fill="#a3a3ff" />
                        <path d="M10 15H30V25H10V15Z" fill="#1a1a2e" />
                        <circle cx="15" cy="20" r="3" fill="#a3a3ff" />
                        <circle cx="25" cy="20" r="3" fill="#a3a3ff" />
                    </svg>
                </div>
            </a>
            <span class="logo-text">HUNO</span>
        </div>

        <nav class="nav-menu">
            <a asp-controller="Home" asp-action="Index" class="nav-item active">Trang Chủ</a>
            <a asp-controller="BangTin" asp-action="Index" class="nav-item">Bảng Tin</a>
            <a href="#" class="nav-item">Tìm việc</a>
            <a asp-controller="HoSo" asp-action="Index" class="nav-item">Quản Lý</a>
            <a href="#" class="nav-item">Sản Phẩm Và Dịch Vụ</a>
        </nav>

        <div class="header-right">
            <div class="search-icon">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M19 19L13.8033 13.8033M13.8033 13.8033C15.1605 12.4461 16 10.5711 16 8.5C16 4.35786 12.6421 1 8.5 1C4.35786 1 1 4.35786 1 8.5C1 12.6421 4.35786 16 8.5 16C10.5711 16 12.4461 15.1605 13.8033 13.8033Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>

            <div class="notification-icon">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M10 1C5.58172 1 2 4.58172 2 9V15H18V9C18 4.58172 14.4183 1 10 1Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M7 19H13" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>

            <div class="user-profile">
                @if (User.Identity.IsAuthenticated)
                {
                    var avatar = User.FindFirst("Avatar")?.Value ?? Url.Content("~/images/avatar-default.png");
                    <a asp-controller="Account" asp-action="Profile" title="Thông tin cá nhân">
                        <img src="@($"{avatar}?v={DateTime.Now.Ticks}")"
                             alt="User Avatar"
                             class="rounded-circle"
                             width="32" height="32"
                             style="cursor: pointer;" />
                    </a>

                }
                else
                {
                    <img src="~/images/avatar-default.png" alt="User Avatar" class="rounded-circle" width="32" height="32" />
                }

            </div>

            <div class="coins-container">
                <span class="crown-icon">👑</span>
                <span>2000</span>
            </div>
        </div>
    </header>
    <div class="container">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

