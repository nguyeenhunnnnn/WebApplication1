    <!-- Header -->
    <header>
        <div class="logo">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <div class="logo-icon">
                    <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="5" fill="#a3a3ff" />
                        <path d="M10 15H30V25H10V15Z" fill="#1a1a2e" />
                        <circle cx="15" cy="20" r="3" fill="#a3a3ff" />
                        <circle cx="25" cy="20" r="3" fill="#a3a3ff" />
                    </svg>
                </div>
            </a>
            <span class="logo-text">HUNO</span>
        </div>
        <!-- Mobile menu toggle button -->
        <div class="menu-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <nav class="nav-menu">
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            }
            <a asp-controller="Home" asp-action="Index" class="nav-item @(currentController == "Home" ? "active" : "")">Trang Chủ</a>
            <a asp-controller="BangTin" asp-action="Index" class="nav-item @(currentController == "BangTin" ? "active" : "")">Bảng Tin</a>
            <a asp-controller="Admin" asp-action="Index" class="nav-item @(currentController == "Admin" ? "active" : "")">Quản Lý</a>
            <a asp-controller="SPDV" asp-action="Index" class="nav-item @(currentController == "SPDV" ? "active" : "")">Sản Phẩm Và Dịch Vụ</a>

        </nav>

        <div class="header-right">
            

            <div class="user-profile">
                @if (User.Identity.IsAuthenticated)
                {
                    var avatar = User.FindFirst("Avatar")?.Value ?? Url.Content("~/images/avatar-default.png");
                    <a asp-controller="Account" asp-action="Profile" title="Thông tin cá nhân">
                        <img src="@($"{avatar}?v={DateTime.Now.Ticks}")"
                             alt="User Avatar"
                             class="rounded-circle"
                             width="32" height="32"
                             style="cursor: pointer;" />
                    </a>

                }
                else
                {
                    <img src="~/images/avatar-default.png" alt="User Avatar" class="rounded-circle" width="32" height="32" />
                }

            </div>

            <div class="coins-container">
                <span class="crown-icon">👑</span>
                <span>2000</span>
            </div>
        </div>
    </header>
    <!-- Menu overlay for mobile -->
    <div class="menu-overlay"></div>
    <div class="container">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

