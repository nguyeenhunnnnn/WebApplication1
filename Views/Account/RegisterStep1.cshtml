@model WebApplication1.Models.ViewModels.RegisterStep1ViewModel;
@{
    ViewData["Title"] = "Register Step 1";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOWO - Nền tảng tuyển dụng</title>
    <style>
                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                }

                body {
                    background-color: #f5f5f5;
                }
                /* Thêm vào phần style */
                html, body {
                    height: 100%;
                    overflow: hidden; /* Ngăn scroll toàn trang */
                }

                .navbar {
                    position: fixed;
                    top: 0;
                    left: 0;
                    right: 0;
                    z-index: 1000;
                }
                /* Thêm hệ thống grid 12 cột */
        .main-content {
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            height: calc(100vh - 72px);
            margin-top: 72px;
        }

        .left-panel {
            grid-column: span 5; /* Chiếm 5/12 cột */
            background-color: #f0e6ff;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 30px;
        }

        .right-panel {
            grid-column: span 7; /* Chiếm 7/12 cột */
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: white;
        }

        /* Điều chỉnh kích thước form */
        .form-container {
            max-width: 600px; /* Giảm kích thước form */
            margin: 0 auto;
            width: 100%;
        }

        /* Điều chỉnh kích thước card */
        .option-card {
            padding: 30px;
            max-width: 450px;
            margin: 0 auto;
            height:180px;
        }

                .left-panel, .right-panel {
                    overflow-y: auto;
                    padding: 30px;
                }

                /* Tùy chỉnh thanh scroll */
                ::-webkit-scrollbar {
                    width: 6px;
                }

                ::-webkit-scrollbar-track {
                    background: #f1f1f1;
                }

                ::-webkit-scrollbar-thumb {
                    background: #6b5fd9;
                    border-radius: 3px;
                }
                /* Giảm khoảng cách giữa các phần tử */
