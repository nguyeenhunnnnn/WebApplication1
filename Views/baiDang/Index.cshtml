@model IEnumerable<WebApplication1.Models.ViewModels.BaiDangViewModel>

@using WebApplication1.Models

@{
    ViewData["Title"] = "Bai Dang ";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styleDangTin.css" />
    <link rel="stylesheet" href="~/css/styleQlbd.css" />
    <title>BOWO - Đăng Tin Tuyển Dụng</title>

</head>
<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">

        <div class="menu">
            <div class="menu-item ">
                <i class="fas fa-file-alt"></i>
                <span>Tìm hồ sơ</span>
            </div>
            <div class="menu-item active">
                <i class="fas fa-file-alt"></i>
                <span>Đăng Tin</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-tasks"></i>
                <span>Quản Lí Tin Đăng</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-users"></i>
                <span>Quản Lí Ứng Viên</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-chart-bar"></i>
                <span>Dashboard</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Đơn Hàng</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-envelope"></i>
                <span>Cấu Hình Email</span>
            </div>
        </div>

        <div class="footer-sidebar">
            <div>Version V2.74.39</div>
            <div>© 2024 BOWO. All Rights Reserved.</div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">

        <!-- Content Area -->
        <div class="content" style="width:140%">
           
            <div class="search-container">
                <div class="section-title">
                    <a>Tin đã đăng</a>
                    <a asp-action="Index">Tin chờ duyệt</a>
                </div>
                <form method="post" asp-action="SearchDB">
                    <div class="search-row">
                        
                        <div class="search-field">
                            <label class="search-label">Môn học</label>
                            <select name="MonDay" class="search-select">
                                <option value="" selected>Chọn</option>
                                <option value="Toán học">Toán Học</option>
                                <option value="Ngữ Văn">Ngữ Văn</option>
                                <option value="Tiếng Anh">Tiếng Anh</option>
                                <option value="Vật Lý">Vật Lý</option>
                            </select>
                        </div>
                        <div class="search-field">
                            <label class="search-label">Địa điểm</label>
                            <select name="Diadiem" class="search-select">
                                <option value="" selected>Chọn</option>
                                <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                                <option value="Hà Nội">Hà nội</option>
                                <option value="Đà Nẵng">Đà Nẵng</option>
                                <option value="Ninh Bình">Ninh Bình</option>
                            </select>
                        </div>
                        <div class="search-field">
                            <label class="search-label">Thời gian đăng</label>
                            <div class="date-picker">
                                <input name="ThoiGian" type="date" class="search-select" placeholder="Chọn">
                                <span class="date-icon">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <rect x="3" y="6" width="18" height="15" rx="2" stroke="currentColor" stroke-width="2" />
                                        <path d="M3 10H21" stroke="currentColor" stroke-width="2" />
                                        <path d="M8 3V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M16 3V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="search-row">
                        <div class="search-field">
                            <label class="search-label">Từ khóa</label>
                            <input name="TuKhoa" type="text" class="search-input" placeholder="Nhập từ khóa">
                        </div>
                        <button class="search-btn" type="submit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M21 21L16.65 16.65M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            Tìm
                        </button>
                    </div>
                </form>
            </div>

            <!-- Results section -->
            <div class="results-container">
                <table>
                    <thead>
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Ngày đăng</th>
                            <th>Hết hạn</th>
                            <th>Địa chỉ</th>
                            <th>Môn dạy</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                                <tr>
                                    <td>@item.sTieuDe</td>
                                    <td>@item.dNgayTao.ToString("dd/MM/yyyy")</td>
                                     <td>@item.dThoiGianHetHan.ToString("dd/MM/yyyy")</td>
                                    <td>@item.sDiaDiem</td>
                                    <td>@item.sMonday</td>
                                    <td class="action-cell">
                                    <a class="action-btn" >
                                        <svg width="20" height="20" viewBox="0 0 24.00 24.00" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#6246ea"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" stroke="#CCCCCC" stroke-width="0.288"></g><g id="SVGRepo_iconCarrier"> <path d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" stroke="#6246ea" stroke-width="1.9200000000000004" stroke-linecap="round" stroke-linejoin="round"></path> <path d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" stroke="#6246ea" stroke-width="1.9200000000000004" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
                                    </a>
                                        <a class="action-btn" >
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M12 5L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                <path d="M5 12L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                        </a>
                                        <a class="action-btn">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M3 6H5H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                                <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>  
                            
                        }
                        
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
        <script>
            // Tab switching functionality
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
              tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
              });
            });

          

            // Search button functionality
            const searchBtn = document.querySelector('.search-btn');
            searchBtn.addEventListener('click', () => {
              // In a real implementation, you would perform search here
              alert('Search functionality would be implemented here');
            });

            // Export button functionality
            const exportBtn = document.querySelector('.export-btn');
            exportBtn.addEventListener('click', () => {
              // In a real implementation, you would export data here
              alert('Export functionality would be implemented here');
            });

            // Row action buttons
            const actionBtns = document.querySelectorAll('.action-btn');
            actionBtns.forEach(btn => {
              btn.addEventListener('click', (e) => {
                const action = e.currentTarget.querySelector('svg').innerHTML.includes('plus') ? 'view' : 'delete';
                const row = e.currentTarget.closest('tr');
                const position = row.cells[0].textContent;

                if (action === 'view') {
                  alert(`Viewing details for ${position}`);
                } else {
                  if (confirm(`Are you sure you want to delete the job posting for ${position}?`)) {
                    alert(`Deleted job posting for ${position}`);
                  }
                }
              });
            });
        </script>
</html>
