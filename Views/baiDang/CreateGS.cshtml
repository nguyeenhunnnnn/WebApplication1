@model WebApplication1.Models.ViewModels.DangTinViewModel
@{
    ViewData["Title"] = "Bai Dang Gia Su";
    ViewData["UserRole"] = User.FindFirst("VaiTro")?.Value; // nếu bạn lưu vai trò bằng claim "VaiTro"
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styleDangTin.css" />
    <link  rel="stylesheet" href="~/css/StyleSidebar.css" />
    <title>HUNO - Đăng Tin Tuyển Dụng</title>
    
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        @await Html.PartialAsync("_SidebarPartial", new
            {
                Controller = ViewContext.RouteData.Values["controller"]?.ToString(),
                Action = ViewContext.RouteData.Values["action"]?.ToString(),
                VaiTro = User.FindFirst("VaiTro")?.Value
            })

        <!-- Main Content -->
        <div class="main-content">

            <!-- Content Area -->
            <div class="content" style="width:220%">
                <div class="section-title">
                    <a asp-action="CreateGS">Đăng Tin Gia Su</a>
                </div>
                <form asp-action="CreateGS" method="post" id="jobPostingForm">
                    @Html.AntiForgeryToken()
                    <div class="form-card">
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                    <label class="form-label">Tiêu đề</label>
                                    <input asp-for="sTieuDe"  type="text" class="form-control" placeholder="Vui lòng nhập">
                                    <span asp-validation-for="sTieuDe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label class="form-label">Môn dạy</label>
                                    <div class="select-wrapper">
                                        <select asp-for="sMonday"  class="form-control">
                                            <option value="">-- Chọn môn dạy --</option>
                                            <option>Toán Học</option>
                                            <option>Ngữ Văn</option>
                                            <option>Tiếng Anh</option>
                                            <option>Vật Lý</option>
                                            <option>Tiếng Nhật</option>
                                            <option>Tiếng Nga</option>
                                        </select>
                                        <span asp-validation-for="sMonday" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                        </div> 

                        <div class="form-group">
                            <label class="form-label">Địa điểm làm việc</label>
                            <div class="select-wrapper">
                                <select asp-for="sDiaDiem"  class="form-control">
                                    <option> Hồ Chí Minh</option>
                                    <option>Hà Nội</option>
                                    <option>Đà Nẵng</option>
                                </select>
                                <span asp-validation-for="sDiaDiem" class="text-danger"></span>
                            </div>
                            <button class="add-btn">
                                <i class="fas fa-plus"></i>
                                <span>Thêm</span>
                            </button>
                        </div>
                        

                        <div class="form-group">
                            <label class="form-label">Yêu cầu công việc</label>
                            <div class="editor-toolbar">
                                <span class="editor-tool"><i class="fas fa-bold"></i></span>
                                <span class="editor-tool"><i class="fas fa-italic"></i></span>
                                <span class="editor-tool"><i class="fas fa-underline"></i></span>
                                <span class="editor-tool"><i class="fas fa-list-ul"></i></span>
                                <span class="editor-tool"><i class="fas fa-list-ol"></i></span>
                            </div>
                            <textarea rows="4" cols="50" asp-for="sYCau" class="editor-content">
                            
                            </textarea>
                            
                        </div>

                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                    <label class="form-label">Mức lương</label>
                                    <input asp-for="fMucLuong"  type="text" class="form-control" placeholder="120000">
                                    <span asp-validation-for="fMucLuong" class="text-danger"></span>
                                </div>
                            </div>
           
                        </div>
                        
                    </div>

                    <h2 class="section-title" style="font-size:20px">THÔNG TIN CHUNG</h2>

                    <div class="form-card">
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                <label class="form-label">Giới tính</label>
                                <div class="radio-group">
                                    
                                    <div class="radio-item">
                                            <input type="radio" asp-for="sGioiTinh" name="sGioiTinh" id="male" value="Nam">
                                           
                                        <label for="male">Nam</label>
                                    </div>
                                    <div class="radio-item">
                                            <input type="radio" asp-for="sGioiTinh" name="sGioiTinh" id="female" value="Nữ">
                                           
                                        <label for="female">Nữ</label>
                                    </div>
                                        
                            </div>
                        </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label class="form-label">Tuổi</label>
                                    <input asp-for="sTuoi"  type="text" class="form-control" placeholder="21-24">
                                    <span asp-validation-for="sTuoi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                        <!-- Button container -->
                        <div class="buttons-container">
                            <button type="button" class="btn btn-cancel">Huỷ</button>
                            <button type="submit" class="btn btn-save">Lưu và Đăng tuyển</button>
                        </div>
                </form>
            </div>
                    
                    </div>
                   
    </div>
                    <!-- JavaScript for handling radio button selections -->
                    <script>
                        // Function to handle radio button selection
                        document.addEventListener('DOMContentLoaded', function() {
                            // Track changes to any radio button
                            const radioButtons = document.querySelectorAll('input[type="radio"]');

                            radioButtons.forEach(radio => {
                                radio.addEventListener('change', function() {
                                    // You could add validation or other logic here
                                    console.log(`Changed ${this.name} to ${this.checked}`);
                                });
                            });

                            // Handle button clicks
                            const cancelButton = document.querySelector('.btn-cancel');
                            const saveButton = document.querySelector('.btn-save');

                            cancelButton.addEventListener('click', function() {
                                // Handle cancel action
                                if (confirm('Bạn có chắc chắn muốn huỷ các thay đổi?')) {
                                    // Reset form or redirect
                                    console.log('Cancelled changes');
                                    // You could reset the form here
                                    // window.location.href = '/previous-page'; // Or redirect
                                }
                            });

                            saveButton.addEventListener('click', function() {
                                // Collect all the selected preferences
                                const preferences = {};
                                const categories = ['position', 'location', 'industry', 'skill', 'salary'];

                                categories.forEach(category => {
                                    const selectedOption = document.querySelector(`input[name="${category}"]:checked`);
                                    if (selectedOption) {
                                        // Determine which column was selected (Bắt buộc, Quan trọng, Ít quan trọng)
                                        const parentCell = selectedOption.closest('td');
                                        const columnIndex = Array.from(parentCell.parentNode.children).indexOf(parentCell);

                                        let priority;
                                        switch(columnIndex) {
                                            case 1: priority = 'required'; break;
                                            case 2: priority = 'important'; break;
                                            case 3: priority = 'lessImportant'; break;
                                            default: priority = 'unknown';
                                        }

                                        preferences[category] = priority;
                                    }
                                });

                                console.log('Saving preferences:', preferences);
                                // Here you would typically send this data to the server
                                alert('Đã lưu và đăng tuyển thành công!');
                                // After saving, you might redirect:
                                // window.location.href = '/recruitment-dashboard';
                            });
                        });
                    </script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
                    </body>
                    </html>


